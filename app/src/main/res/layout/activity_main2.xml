<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/themetwo"

    >

    <ImageView
        android:id="@+id/ff"
        android:layout_width="246dp"
        android:layout_height="153dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/chatbottwo"
        app:layout_constraintBottom_toTopOf="@+id/startChat"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- <a href="https://www.flaticon.com/free-icons/chatbot" title="chatbot icons">Chatbot icons created by Smashicons - Flaticon</a> -->


    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/startChat"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_55sdp"
        android:text="start chat"
        android:textColor="#2894BF"
        android:textSize="30dp"
        app:buttonColor="@color/buttob"
        app:cornerRadius="@dimen/_50ssp"
        app:glowColor="@color/stroke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ff"
        app:pressedGlowSize="@dimen/_75ssp"
        app:unpressedGlowSize="@dimen/_15ssp" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/playGame"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerInParent="true"

        android:text="Play Game"
        android:textColor="#2894BF"
        android:textSize="30dp"
        app:buttonColor="@color/buttob"
        app:cornerRadius="@dimen/_50sdp"
        app:glowColor="@color/stroke"
        app:pressedGlowSize="@dimen/_75ssp"
        app:unpressedGlowSize="@dimen/_15ssp"

        app:layout_constraintTop_toBottomOf="@+id/startChat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />






</androidx.constraintlayout.widget.ConstraintLayout>