<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playActivity"
    android:background="@drawable/themetwo"
    android:layout_above="@+id/themetwo"
    >


    <ImageView
        android:id="@+id/frenzaLogo"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/chatbottwo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        />



    <!-- <a href="https://www.flaticon.com/free-icons/fist" title="fist icons">Fist icons created by Cuputo - Flaticon</a> -->


        <ImageView
            android:id="@+id/rock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/rock"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@+id/frenzaLogo"
            app:layout_constraintLeft_toLeftOf="parent"


            />

    <!-- <a href="https://www.flaticon.com/free-icons/scissors" title="scissors icons">Scissors icons created by Cap Cool - Flaticon</a> -->


        <ImageView
            android:id="@+id/scissor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/rock"
            android:src="@drawable/scissors"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@+id/frenzaLogo"
            app:layout_constraintLeft_toRightOf="@+id/rock"
            app:layout_constraintRight_toRightOf="parent"
            />

    <!-- <a href="https://www.flaticon.com/free-icons/hands" title="hands icons">Hands icons created by Kalashnyk - Flaticon</a> -->

        <ImageView
            android:id="@+id/hand"
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/paper"

            app:layout_constraintTop_toBottomOf="@+id/rock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            />


       <TextView
           android:id="@+id/win"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Who will win???"
           android:textSize="@dimen/_20ssp"
           android:textColor="@color/stroke"
           android:layout_marginTop="@dimen/_25sdp"
           android:layout_marginLeft="20dp"

           app:layout_constraintTop_toBottomOf="@+id/hand"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"


           />


</androidx.constraintlayout.widget.ConstraintLayout>


