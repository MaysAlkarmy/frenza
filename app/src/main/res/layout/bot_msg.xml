<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"

        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/user"
            app:layout_constraintLeft_toRightOf="@+id/userMessage"
            app:layout_constraintTop_toTopOf="parent"
            />



        <ImageView
            android:id="@+id/bot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chatbottwo"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"


            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/botMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bot_message"
            android:text=" hi you are mmm "
            android:textColor="@color/messBotColor"
            app:layout_constraintLeft_toRightOf="@+id/bot"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/_18ssp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="4dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>