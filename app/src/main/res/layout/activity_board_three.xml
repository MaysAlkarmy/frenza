<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board_three"
    android:background="@drawable/themetwo"
    >

    <ImageView
        android:id="@+id/gamehand"
        android:layout_width="285dp"
        android:layout_height="132dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/gamehand"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Rock-paper-scissor game! The only game where rock beats
paper, paper beats scissors, and scissor beats rock.
                 Lets get ready to rumble"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:layout_marginTop="130dp"
        android:padding="15dp"

        app:layout_constraintTop_toBottomOf="@+id/gamehand"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/nextTwo"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:text="NEXT"
        android:textColor="#2894BF"
        android:textSize="30dp"
        app:buttonColor="@color/buttob"
        app:cornerRadius="@dimen/_50ssp"
        app:glowColor="@color/stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:pressedGlowSize="@dimen/_75ssp"
        app:unpressedGlowSize="@dimen/_15ssp"


        />

</androidx.constraintlayout.widget.ConstraintLayout>